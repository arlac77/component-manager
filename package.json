{
  "name": "component-manager",
  "version": "0.0.0-semantic-release",
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "main": "./src/component-manager.mjs",
  "description": "manages components and its dependencies",
  "keywords": [
    "kronos-integration",
    "systemd"
  ],
  "contributors": [
    {
      "name": "Markus Felten",
      "email": "markus.felten@gmx.de"
    }
  ],
  "license": "BSD-2-Clause",
  "bin": {
    "component-manager": "src/component-manager-cli.mjs"
  },
  "scripts": {
    "test": "node --run test:ava",
    "test:ava": "ava --timeout 4m tests/*-ava.mjs tests/*-ava-node.mjs",
    "cover": "c8 -x 'tests/**/*' --temp-directory build/tmp ava --timeout 2m && c8 report -r lcov -o build/coverage --temp-directory build/tmp"
  },
  "dependencies": {
    "@kronos-integration/interceptor-decode-json": "^3.0.15",
    "@kronos-integration/service": "^13.2.14",
    "@kronos-integration/service-admin": "^3.4.92",
    "@kronos-integration/service-authenticator": "^3.0.14",
    "@kronos-integration/service-health": "^7.0.19",
    "@kronos-integration/service-http": "^13.0.20",
    "@kronos-integration/service-ldap": "^5.0.9",
    "@kronos-integration/service-repositories": "^4.0.23",
    "config-expander": "^14.0.9",
    "github-repository-provider": "^9.2.31",
    "pacote": "^21.0.1"
  },
  "devDependencies": {
    "@semantic-release/commit-analyzer": "^13.0.0",
    "@semantic-release/exec": "^7.0.3",
    "@semantic-release/github": "^11.0.5",
    "@semantic-release/release-notes-generator": "^14.0.1",
    "ava": "^6.1.3",
    "c8": "^10.1.2",
    "npm-pkgbuild": "^18.2.30",
    "semantic-release": "^24.1.2"
  },
  "optionalDependencies": {
    "@kronos-integration/service-systemd": "^3.0.3",
    "mf-hosting": "^2.8.17"
  },
  "engines": {
    "node": ">=22.12.0"
  },
  "os": [
    "linux",
    "darwin"
  ],
  "cpu": [
    "arm",
    "arm64",
    "x64"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/arlac77/component-manager.git"
  },
  "bugs": {
    "url": "https://github.com/arlac77/component-manager/issues"
  },
  "homepage": "https://github.com/arlac77/component-manager#readme",
  "pkgbuild": {
    "content": {
      "${install.dir}": [
        {
          "type": "npm-pack"
        },
        {
          "type": "node-modules"
        }
      ],
      "${config.dir}config.json": "config/config.json",
      "${nginx.sites.dir}${name}.conf": "pkg/nginx.conf",
      "${systemd.unit.dir}${name}.service": "pkg/${name}.service",
      "kronos": true
    },
    "http.base.path": "/services/${name}/api",
    "kronos": true
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      [
        "@semantic-release/exec",
        {
          "publishCmd": "npx npm-pkgbuild --publish dist"
        }
      ],
      [
        "@semantic-release/github",
        {
          "assets": [
            {
              "path": "dist/*.deb",
              "label": "any Debian Package"
            },
            {
              "path": "dist/*any.pkg.*",
              "label": "any Arch Linux Package"
            },
            {
              "path": "dist/*x86_64.pkg.*",
              "label": "x86_64 Arch Linux Package"
            },
            {
              "path": "dist/*aarch64.pkg.*",
              "label": "arm64 Arch Linux Package"
            },
            {
              "path": "dist/*noarch.rpm",
              "label": "noarch RPM"
            },
            {
              "path": "dist/*x86_64.rpm",
              "label": "x86_64 RPM"
            },
            {
              "path": "dist/*aarch64.rpm",
              "label": "arm64 RPM"
            }
          ]
        }
      ]
    ]
  },
  "template": {
    "inheritFrom": [
      "arlac77/template-arlac77-github",
      "arlac77/template-kronos-app"
    ]
  }
}
