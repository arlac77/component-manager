{
  "name": "component-manager",
  "version": "0.0.0-semantic-release",
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "bin",
    "bin/component-manager-systemd",
    "bin/component-manager-systemd"
  ],
  "main": "dist/component-manager.js",
  "module": "src/component-manager.mjs",
  "description": "manages components and its dependencies",
  "keywords": [
    "kronos-integration",
    "systemd"
  ],
  "contributors": [
    {
      "name": "Markus Felten",
      "email": "markus.felten@gmx.de"
    }
  ],
  "license": "BSD-2-Clause",
  "bin": {
    "component-manager": "bin/component-manager",
    "component-manager-systemd": "bin/component-manager-systemd"
  },
  "scripts": {
    "prepare": "rollup -c",
    "test": "ava --timeout 2m",
    "cover": "c8 -x 'tests/**/*' --temp-directory build/tmp ava --timeout 2m && c8 report -r lcov -o build/coverage --temp-directory build/tmp",
    "docs": "documentation readme src/component-manager.mjs --section=API",
    "lint": "documentation lint src/component-manager.mjs"
  },
  "dependencies": {
    "@kronos-integration/service": "^8.3.21",
    "@kronos-integration/service-admin": "^3.0.17",
    "@kronos-integration/service-authenticator": "^1.0.18",
    "@kronos-integration/service-health-check": "^5.0.18",
    "@kronos-integration/service-http": "^10.0.8",
    "@kronos-integration/service-ldap": "^2.1.17",
    "aggregation-repository-provider": "^2.0.15",
    "config-expander": "^11.0.5",
    "github-repository-provider": "^7.0.9",
    "pacote": "^9.1.0"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^11.0.2",
    "@rollup/plugin-node-resolve": "^7.1.1",
    "@semantic-release/commit-analyzer": "^8.0.1",
    "@semantic-release/exec": "^5.0.0",
    "@semantic-release/release-notes-generator": "^9.0.1",
    "ava": "^3.6.0",
    "builtin-modules": "^3.1.0",
    "c8": "^7.1.0",
    "documentation": "^12.3.0",
    "npm-pkgbuild": "^6.11.9",
    "rollup": "^2.6.0",
    "rollup-plugin-cleanup": "^3.1.1",
    "rollup-plugin-consts": "^1.0.1",
    "rollup-plugin-executable": "^1.5.3",
    "rollup-plugin-native": "^1.2.12",
    "semantic-release": "^17.0.4"
  },
  "optionalDependencies": {
    "@kronos-integration/service-systemd": "^2.2.12"
  },
  "engines": {
    "node": ">=13.12.0"
  },
  "os": [
    "linux",
    "darwin"
  ],
  "cpu": [
    "arm",
    "arm64",
    "x64"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/arlac77/component-manager.git"
  },
  "bugs": {
    "url": "https://github.com/arlac77/component-manager/issues"
  },
  "homepage": "https://github.com/arlac77/component-manager#readme",
  "config": {
    "socket": "/run/${name}/http/socket"
  },
  "pacman": {
    "arch": [
      "aarch64",
      "armv7h",
      "x86_64"
    ],
    "additional-content": [
      "npm-dist",
      "npm-dependencies"
    ],
    "backup": "etc/${name}/config.json",
    "content": {
      "/usr/lib/tmpfiles.d/${name}.conf": "pacman/tmpfiles.conf",
      "/etc/${name}/config.json": "config/config.json"
    },
    "depends": {
      "systemd": ">=244"
    },
    "hooks": "pacman/hooks.sh",
    "installdir": "/services/${name}"
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/exec",
        {
          "publishCmd": "npx npm-pkgbuild --pkgver ${nextRelease.version} --npm-dist --npm-modules pkgbuild pacman makepkg"
        }
      ]
    ]
  },
  "template": {
    "inheritFrom": [
      "arlac77/template-kronos-app",
      "arlac77/template-github"
    ]
  }
}
