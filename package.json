{
  "name": "component-manager",
  "version": "0.0.0-semantic-release",
  "publishConfig": {
    "access": "public"
  },
  "main": "./src/component-manager.mjs",
  "description": "manages components and its dependencies",
  "keywords": [
    "kronos-integration",
    "systemd"
  ],
  "contributors": [
    {
      "name": "Markus Felten",
      "email": "markus.felten@gmx.de"
    }
  ],
  "license": "BSD-2-Clause",
  "bin": {
    "component-manager": "./src/component-manager-cli.mjs"
  },
  "scripts": {
    "test": "ava --timeout 2m",
    "cover": "c8 -x 'tests/**/*' --temp-directory build/tmp ava --timeout 2m && c8 report -r lcov -o build/coverage --temp-directory build/tmp"
  },
  "dependencies": {
    "@kronos-integration/interceptor-decode-json": "^2.1.11",
    "@kronos-integration/service": "^8.6.0",
    "@kronos-integration/service-admin": "^3.1.10",
    "@kronos-integration/service-authenticator": "^1.1.2",
    "@kronos-integration/service-health-check": "^5.0.37",
    "@kronos-integration/service-http": "^10.1.22",
    "@kronos-integration/service-ldap": "^2.1.39",
    "aggregation-repository-provider": "^2.6.61",
    "config-expander": "^11.0.13",
    "github-repository-provider": "^7.9.13",
    "pacote": "^11.1.9"
  },
  "devDependencies": {
    "@semantic-release/commit-analyzer": "^8.0.1",
    "@semantic-release/exec": "^5.0.0",
    "@semantic-release/release-notes-generator": "^9.0.1",
    "ava": "^3.10.1",
    "c8": "^7.1.2",
    "documentation": "^13.0.0",
    "npm-pkgbuild": "^6.12.1",
    "semantic-release": "^17.1.1"
  },
  "optionalDependencies": {
    "@kronos-integration/service-systemd": "^2.3.9"
  },
  "engines": {
    "node": ">=14.3.0"
  },
  "os": [
    "linux",
    "darwin"
  ],
  "cpu": [
    "arm",
    "arm64",
    "x64"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/arlac77/component-manager.git"
  },
  "bugs": {
    "url": "https://github.com/arlac77/component-manager/issues"
  },
  "homepage": "https://github.com/arlac77/component-manager#readme",
  "config": {
    "socket": "/run/${name}/http/socket"
  },
  "pacman": {
    "arch": [
      "aarch64",
      "armv7h",
      "x86_64"
    ],
    "backup": "etc/${name}/config.json",
    "content": {
      "/usr/lib/tmpfiles.d/${name}.conf": "pacman/tmpfiles.conf",
      "/etc/${name}/config.json": "config/config.json",
      "/usr/lib/sysusers.d/${name}.conf": "pacman/sysusers.conf",
      "/etc/nginx/config.d/${name}.conf": "pacman/nginx.conf"
    },
    "depends": {
      "systemd": ">=244",
      "nginx-mainline": ">=1.17.10"
    },
    "hooks": "pacman/hooks.sh",
    "installdir": "/services/${name}",
    "group": "services",
    "content-provider": {
      "systemd": {
        "units": {
          "${name}": "systemd/${name}*"
        }
      }
    }
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/exec",
        {
          "publishCmd": "npx npm-pkgbuild --pkgver ${nextRelease.version} --npm-dist --npm-modules pkgbuild pacman makepkg"
        }
      ]
    ]
  },
  "template": {
    "inheritFrom": [
      "arlac77/template-arlac77-github",
      "arlac77/template-kronos-app"
    ]
  }
}
